{
	"name": "{{ name }}",
	"version": "{{ version }}",
	"author": [
		"{{ author }}"
	],
	"url": "{{ url }}",
	"descriptionmsg": "{{ lowername }}-desc",
	"license-name": "{{ license }}",
	"type": "other",
	"MessagesDirs": {
		"{{ name }}": [
			"i18n"
		]
	},
{% if parts.javascript %}
	"ResourceModules": {
		"ext.{{ lowername }}": {
			"scripts": [
				"modules/ext.{{ lowername }}.js"
			],
			"styles": [
				"modules/ext.{{ lowername }}.css"
			],
			"messages": [],
			"dependencies": []
		}
	},
{% endif %}
{% if parts.specialpage %}
	"SpecialPages": {
		"{{ specialpage.name.noNamespace }}": "{{ specialname.className }}"
	},
	"ExtensionMessagesFiles": {
		"{{ name }}Alias": "{{ name }}.alias.php"
	},
{% endif %}
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "{{ name }}"
	},
{% if ext_specialpage_name is not defined %}
	"SpecialPages": {
		"{{ ext_specialpage_name_nonamespace }}": "{{ ext_specialpage_name }}"
	},

	"manifest_version": 1
}

{
	"name": "{{ name }}",
	"version": "{{ version }}",
	"author": [
		"{{ author }}"
	],
	"url": "{{ url }}",
	"namemsg": "{{ lowerCamelName }}",
	"descriptionmsg": "{{ lowerCamelName }}-desc",
	"license-name": "{{ license }}",
	"type": "other",
	"manifest_version": 1,
	"MessagesDirs": {
		"{{ name }}": [
			"i18n"
		]
	},
{% if parts.javascript %}
	"ResourceModules": {
		"ext.{{ lowerCamelName }}": {
			"scripts": [
				"modules/ext.{{ lowerCamelName }}.js"
			],
			"styles": [
				"modules/ext.{{ lowerCamelName }}.css"
			],
			"messages": [],
			"dependencies": []
		},
		"ResourceLoaderTestModules": {
			"{{ name }}Hooks::onResourceLoaderTestModules"
		},
	},
{% endif %}
{% if parts.specialpage %}
	"SpecialPages": {
		"{{ specialpage.name.lowerCamelName }}": "{{ specialname.className }}"
	},
	"ExtensionMessagesFiles": {
		"{{ name }}Alias": "{{ name }}.alias.php"
	},
{% endif %}
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "{{ name }}"
	},
{% if hooksObject %}
	{#  The backend needs to write this object so that
		we get a valid json without trailing commas #}
	"Hooks": {{ hooksObject|raw }},
{% endif %}
	"AutoloadClasses": {
{% if parts.specialpage %}
		"{{ specialpage.name.className }}": "specials/SpecialPage.php",
{% endif %}
{# TODO:
		Make hooks conditional on whether we have javascript or hooks.
		for the moment, this is a bit of a problem because the end of the 'AutoloadClasses'
		object cannot have an extra comma, so if all files are conditional, we may end
		up with an extra comma and have the extension.json file not load properly.
		Since 'Hooks.php' is generally useful, I am adding it in here unconditionally
		and in the download.php as well. If it's unused, the class will be empty, serving
		as a placeholder for the extension files. Not perfect, but good enough for now.
#}
		"{{ name }}Hooks": "Hooks.php"
	}
}
